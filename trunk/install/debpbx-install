echo "<<<<<<<<<<  SCRIPT INITIATION ASTERISK  >>>>>>>>>>"
sed -i "s/exit 0/\/usr\/local\/sbin\/amportal start/g" "/etc/rc.local"
echo "exit 0" >> /etc/rc.local

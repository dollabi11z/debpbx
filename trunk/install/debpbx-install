update-grub                                                                                                        
echo ""
echo "<<<<<<<<<<  RECONFIGURATION GRUB  >>>>>>>>>"
echo "tftp            dgram   udp     wait    nobody  /usr/sbin/tcpd  /usr/sbin/in.tftpd /tftpboot" > /etc/inetd.conf
